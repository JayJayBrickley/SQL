/* Updating a score within the app*/

UPDATE Golf_Scores SET score=63 WHERE course='Eagle Eye';

SELECT * FROM Golf_Scores;

/* Deleting a course due to low score*/

DELETE FROM Golf_Scores WHERE course='Eagle Eye';
